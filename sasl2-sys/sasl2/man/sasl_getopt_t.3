.SH SYNOPSIS
.sp
.nf
#include <sasl/sasl.h>

int sasl_getopt_t(void *context,
               const char *plugin_name,
               const char *option,
               const char ** result,
               unsigned * len);
.fi
.SH DESCRIPTION
.INDENT 0.0
.TP
.B int sasl_getopt_t(void *context,
.TP
